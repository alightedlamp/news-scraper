{{> nav}}
<h2>Login</h2>
{{#if error}}
<div class="error">{{ error }}</div>
{{/if}}
<form id="login-form">
    <div class="form-group">
        <label>Username: </label>
        <input type="text" name="username" required/>
    </div>
    <div class="form-group">
        <label>Password: </label>
        <input type="password" name="password" required/>
    </div>
    <button type="submit">Login</button>
</form>